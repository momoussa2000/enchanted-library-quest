      "platform": "webapp",
      "url": "https://fablebox.net/games/enchanted-library"
    }
  ],
  
  "prefer_related_applications": false,
  
  "shortcuts": [
    {
      "name": "Start New Adventure",
      "short_name": "New Game",
      "description": "Begin a new magical learning adventure",
      "url": "/new-game",
      "icons": [
        {
          "src": "/assets/images/shortcut-new.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Continue Learning",
      "short_name": "Continue",
      "description": "Continue your current adventure",
      "url": "/continue",
      "icons": [
        {
          "src": "/assets/images/shortcut-continue.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Parent Dashboard",
      "short_name": "Dashboard",
      "description": "View learning progress and insights",
      "url": "/parent-dashboard",
      "icons": [
        {
          "src": "/assets/images/shortcut-dashboard.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  
  "handle_links": "preferred",
  
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  
  "edge_side_panel": {
    "preferred_width": 400
  },
  
  "display_override": [
    "window-controls-overlay",
    "standalone",
    "minimal-ui",
    "browser"
  ],
  
  "protocol_handlers": [
    {
      "protocol": "web+enchantedlibrary",
      "url": "/share?data=%s"
    }
  ],
  
  "file_handlers": [
    {
      "action": "/import-progress",
      "accept": {
        "application/json": [".progress", ".save"]
      },
      "name": "Game Progress Files",
      "icons": [
        {
          "src": "/assets/images/file-icon.png",
          "sizes": "256x256",
          "type": "image/png"
        }
      ]
    }
  ],
  
  "share_target": {
    "action": "/share-achievement",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "certificate",
          "accept": ["image/*"]
        }
      ]
    }
  },
  
  "permissions": [
    "notifications",
    "background-sync",
    "persistent-storage"
  ],
  
  "serviceworker": {
    "src": "/sw.js",
    "scope": "/",
    "update_via_cache": "none"
  }
}
